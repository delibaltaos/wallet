{
  "packages": [
    {
      "title": "Install NPM dependencies",
      "output": "Installing dependencies...",
      "cmd": "npm",
      "args": [
        "install",
        "dotenv",
        "@raydium-io/raydium-sdk",
        "ed25519-hd-key",
        "bip39",
        "pouchdb",
        "pouchdb-find"
      ]
    }
  ],

  "data" : [
    {
      "title": "Downloading Pool Data From Raydium",
      "cmd": "node",
      "args": [
        "./scripts/download.js",
        "https://api.raydium.io/v2/sdk/liquidity/mainnet.json",
        "./data/jsons/pools.json"
      ]
    },
    {
      "title": "Downloading tokens JSON from Raydium",
      "cmd": "node",
      "args": [
        "./scripts/download.js",
        "https://api.raydium.io/v2/sdk/token/raydium.mainnet.json",
        "./data/jsons/tokens.json"
      ]
    }
  ],

  "db": [{
    "title": "Initialize DB",
    "cmd": "node",
    "args": [
      "./scripts/db.js"
    ]
  }]
}