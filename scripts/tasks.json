{
  "init": [
    {
      "title": "Initialize",
      "tasks": [
        {
          "title": "Init Directories",
          "cmd": "node",
          "args": [
            "./scripts/initDirectories"
          ]
        },
        {
          "title": "Installing Script Dependencies",
          "cmd": "node",
          "args": [
            "./scripts/installDeps",
            "winston",
            "pouchdb",
            "pouchdb-find"
          ]
        }
      ]
    }
  ],

  "data": [
    {
      "title": "Download JSONs from Raydium",
      "tasks": [
        {
          "title": "Downloading Pool Data",
          "cmd": "node",
          "args": [
            "./scripts/download",
            "https://api.raydium.io/v2/sdk/liquidity/mainnet.json",
            "./data/jsons/pools.json"
          ]
        },
        {
          "title": "Downloading Tokens Data",
          "cmd": "node",
          "args": [
            "./scripts/download",
            "https://api.raydium.io/v2/sdk/token/raydium.mainnet.json",
            "./data/jsons/tokens.json"
          ]
        }
      ]
    }
  ],

  "db": [
    {
      "title": "Initialize DB",
      "tasks": [
        {
          "title": "Initializing Pool DB",
          "cmd": "node",
          "args" : [
            "./scripts/db",
            "pools"
          ]
        },
        {
          "title": "Initializing Tokens DB",
          "cmd": "node",
          "args" : [
            "./scripts/db",
            "tokens"
          ]
        }
      ]
    }
  ],

  "finish": [
    {
      "title": "Dependencies",
      "tasks": [
        {
          "title": "Installing dependencies",
          "cmd": "node",
          "args": [
            "./scripts/installDeps",
            "dotenv",
            "@raydium-io/raydium-sdk",
            "ed25519-hd-key",
            "bip39"
          ]
        }
      ]
    }
  ]
}